<Window
    x:Class="WPF_TestingApp_DJ.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPF_TestingApp_DJ"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:WPF_TestingApp_DJ.Model"
    xmlns:vm="clr-namespace:WPF_TestingApp_DJ.ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">

    <Window.Resources>
        <model:EmptyStringToVisibilityConverter x:Key="EmptyStringToVisibilityConverter" />

        <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="TextAlignment" Value="Left" />
        </Style>

        <DataTemplate x:Key="closeIcon8">
            <Image
                Width="16"
                Height="16"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Source="pack://application:,,,/Resources/close.png" />

        </DataTemplate>
    </Window.Resources>

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="20" />
            <RowDefinition Height="30" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  ToolBar for Filtering  -->
        <ToolBar
            Name="tb"
            Grid.Row="0"
            Margin="5"
            HorizontalAlignment="Stretch"
            Band="0"
            BandIndex="0"
            SizeChanged="ToolBar_SizeChanged"
            ToolBarTray.IsLocked="True">
            <Grid Name="toolBarGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <TextBox
                    Name="filterText"
                    Grid.Column="0"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    HorizontalContentAlignment="Left"
                    Style="{StaticResource FilterTextBoxStyle}"
                    Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                    TextChanged="FilterText_TextChanged"
                    ToolTip="Filter" />
                <Button
                    Name="dismissButton"
                    Grid.Column="1"
                    Width="16"
                    Height="16"
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Command="{Binding ClearFilterCommand}"
                    ContentTemplate="{StaticResource closeIcon8}"
                    ToolTip="Clear Filter"
                    Visibility="{Binding FilterText, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
            </Grid>
        </ToolBar>



        <!--  Grid for Filtering  -->
        <Grid Name="testingGrid" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <TextBox
                Name="simpleTB"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Grid.Column="1"
                Width="16"
                Height="16"
                Margin="5,0,0,0"
                VerticalAlignment="Center"
                Command="{Binding ClearFilterCommand}"
                ContentTemplate="{StaticResource closeIcon8}"
                ToolTip="Clear Filter"
                Visibility="{Binding FilterText, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
        </Grid>

        <!--  DockPanel for Filtering  -->
        <DockPanel
            Grid.Row="2"
            HorizontalAlignment="Stretch"
            LastChildFill="True">
            <TextBox
                Margin="5,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Style="{StaticResource FilterTextBoxStyle}"
                Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="Filter" />
            <Button
                Width="16"
                Height="16"
                HorizontalAlignment="Left"
                VerticalAlignment="Stretch"
                Command="{Binding ClearFilterCommand}"
                ContentTemplate="{StaticResource closeIcon8}"
                ToolTip="Clear Filter"
                Visibility="{Binding FilterText, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
        </DockPanel>

        <!--  SatckPanel for Filtering  -->
        <StackPanel
            Grid.Row="3"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">
            <TextBox
                Margin="5,0,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Style="{StaticResource FilterTextBoxStyle}"
                Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                ToolTip="Filter" />
            <Button
                Width="16"
                Height="16"
                VerticalAlignment="Stretch"
                Command="{Binding ClearFilterCommand}"
                ContentTemplate="{StaticResource closeIcon8}"
                DockPanel.Dock="Right"
                ToolTip="Clear Filter"
                Visibility="{Binding FilterText, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
        </StackPanel>

        <!--  Another ToolBar attempt  -->
        <ToolBar Grid.Row="4">
            <ToolBar.Items>
                <Button Content="1" />
                <Button Content="2" />
                <Button Content="3" />
                <DockPanel LastChildFill="True" HorizontalAlignment="Stretch">
                    <Button
                        Command="{Binding ClearFilterCommand}"
                        Content="X"
                        DockPanel.Dock="Right"
                        Visibility="{Binding IsVisible}" />
                    <TextBox Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}" />
                </DockPanel>
            </ToolBar.Items>
        </ToolBar>

        <!--  Have ToolBar separate from Filter control  -->
        <DockPanel Grid.Row="5">
            <ToolBar DockPanel.Dock="Left">
                <ToolBar.Items>
                    <Button Content="1" />
                    <Button Content="2" />
                    <Button Content="3" />
                </ToolBar.Items>
            </ToolBar>
            <DockPanel>
                <!--  Need to have Button first !  -->
                <Button
                    Width="16"
                    Height="16"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Stretch"
                    Command="{Binding ClearFilterCommand}"
                    ContentTemplate="{StaticResource closeIcon8}"
                    DockPanel.Dock="Right"
                    ToolTip="Clear Filter"
                    Visibility="{Binding FilterText, Converter={StaticResource EmptyStringToVisibilityConverter}}" />
                <TextBox
                    Style="{StaticResource FilterTextBoxStyle}"
                    Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"
                    ToolTip="Filter" />
            </DockPanel>
        </DockPanel>

    </Grid>
</Window>
